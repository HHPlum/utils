{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "ES2018",
      "node",
      "vitest/globals",
      "jsdom"
    ],
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*",
    "build/**/*",
    "**/__tests__/**/*",
    "scripts/**/*",
    "rollup.config.js",
    "vitest.config.ts"
  ],
  "exclude": []
}
