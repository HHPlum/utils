{
  "name": "@hhplum/utils-monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "typecheck": "tsc -p scripts --noEmit && pnpm -r --parallel run typecheck",
    "build": "pnpm -r --filter='./packages/*' run build",
    "test": "vitest run",
    "prepublish": "pnpm run build"
  },
  "devDependencies": {
    "@hhplum/utils-browser": "workspace:*",
    "@hhplum/utils-global": "workspace:*",
    "@hhplum/utils-node": "workspace:*",
    "@hhplum/utils-test": "workspace:*",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^18.19.39",
    "esbuild": "^0.23.0",
    "eslint": "^9.5.0",
    "eslint-plugin-import-x": "^0.5.2",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-regexp": "^2.6.0",
    "globals": "^15.6.0",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "simple-git-hooks": "^2.11.1",
    "tslib": "^2.6.3",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1",
    "vitest": "^1.6.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "typescript-eslint>eslint": "^9.0.0",
        "@typescript-eslint/eslint-plugin>eslint": "^9.0.0",
        "@typescript-eslint/parser>eslint": "^9.0.0",
        "@typescript-eslint/type-utils>eslint": "^9.0.0",
        "@typescript-eslint/utils>eslint": "^9.0.0"
      }
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm -r --parallel run prebuild && pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*.{js,ts,md}": [
      "eslint --fix"
    ]
  }
}
