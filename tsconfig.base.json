{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "ES2018",
    "module": "ESNext",
    "newLine": "LF",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "Node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true,
    "declarationDir": "dist",
    "composite": true,
    "jsx": "preserve",
    "lib": [
      "ES2018",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "paths": {
      "@hhplum/utils-*": [
        "packages/*"
      ]
    }
  },
  "include": [
    "packages/global/**/*"
  ],
  "exclude": [
    "**/__tests__/**/*",
    "node_modules",
    "**/dist"
  ],
  "references": [
    {
      "path": "./tsconfig.dev.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
